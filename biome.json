{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["**/components/ui/**/*.tsx", "**/components/ui/**/*.ts"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"ignore": ["**/components/ui/**/*.tsx", "**/components/ui/**/*.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false
					}
				}
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "error",
					"options": {
						"maxAllowedComplexity": 20
					}
				}
			}
		},
		"ignore": ["**/*.config.ts", "**/components/ui/**/*.tsx", "**/components/ui/**/*.ts"]
	},

	"overrides": [
		{
			"include": ["examples/**"],
			"ignore": ["**/*.json"],
			"linter": {
				"rules": {
					"recommended": true,
					"style": {
						"useNamingConvention": "off"
					},
					"correctness": {
						"noUndeclaredVariables": "off"
					}
				}
			}
		},
		{
			"include": ["apps/**"],
			"ignore": ["**/*.json", "**/components/ui/**/*.tsx", "**/components/ui/**/*.ts"],
			"linter": {
				"rules": {
					"all": true,
					"style": {
						"noDefaultExport": "off",
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	]
}
