{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/**/*.bench.ts",
    "src/_test"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "esModuleInterop": true
  }
}
